@model EmployeeViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-danger text-white text-center rounded-top-4">
                    <h2 class="mb-0">Delete Employee</h2>
                </div>
                <div class="card-body bg-light">
                    <div class="alert alert-warning d-flex align-items-center mb-4 shadow-sm" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4 text-danger"></i>
                        <div>
                            <h5 class="mb-0 fw-bold">Are you sure you want to delete this?</h5>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h4 class="fw-semibold text-danger">Employee</h4>
                        <hr class="border-danger opacity-50" />
                        <dl class="row">
                            <dt class="col-sm-3 text-primary fw-semibold">
                                @Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-primary bg-gradient fs-6 px-3 py-2 shadow-sm">
                                    @Html.DisplayFor(model => model.Code)
                                </span>
                            </dd>
                            <dt class="col-sm-3 text-primary fw-semibold">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-info bg-gradient text-dark fs-6 px-3 py-2 shadow-sm">
                                    @Html.DisplayFor(model => model.Name)
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <div class="mb-4">
                        <h5 class="fw-bold text-info">Custom Properties</h5>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle rounded-3 overflow-hidden shadow-sm">
                                <thead class="bg-gradient" style="background: linear-gradient(90deg, #4f8cff 0%, #6ee7b7 100%) !important;">
                                    <tr class="text-white">
                                        <th>Property Name</th>
                                        <th>Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var property in Model.Properties)
                                    {
                                        <tr class="bg-white">
                                            <td>
                                                <span class="badge bg-primary bg-gradient fs-6 px-3 py-2 shadow-sm">@property.PropertyName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info bg-gradient text-dark fs-6 px-3 py-2 shadow-sm">@property.Value</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <form asp-action="Delete" class="d-flex gap-3">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-gradient btn-danger btn-lg fw-bold shadow" />
                        <a asp-action="Index" class="btn btn-gradient btn-secondary btn-lg fw-bold shadow">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn-gradient {
            background: linear-gradient(90deg, #ef4444 0%, #3b82f6 100%);
            color: #fff !important;
            border: none;
        }
        .btn-gradient.btn-secondary {
            background: linear-gradient(90deg, #6ee7b7 0%, #3b82f6 100%);
            color: #fff !important;
        }
        .btn-gradient:hover, .btn-gradient:focus {
            filter: brightness(0.95);
            color: #fff !important;
        }
        .card-header.bg-gradient {
            background: linear-gradient(90deg, #ef4444 0%, #3b82f6 100%) !important;
        }
    </style>
}
@model IEnumerable<EmployeeViewModel>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">Employees</h2>
                </div>
                <div class="card-body bg-light">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle rounded-3 overflow-hidden shadow-sm">
                            <thead class="bg-gradient" style="background: linear-gradient(90deg, #4f8cff 0%, #6ee7b7 100%) !important;">
                                <tr class="text-white">
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Properties</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr class="bg-white">
                                        <td>
                                            <span class="badge bg-primary bg-gradient fs-6 px-3 py-2 shadow-sm">@employee.Code</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info bg-gradient text-dark fs-6 px-3 py-2 shadow-sm">@employee.Name</span>
                                        </td>
                                        <td>
                                            @if (employee.Properties != null && employee.Properties.Any())
                                            {
                                                <ul class="list-group list-group-flush rounded-3 shadow-sm mb-0">
                                                    @foreach (var property in employee.Properties)
                                                    {
                                                        <li class="list-group-item bg-gradient bg-info bg-opacity-25 text-dark fw-semibold mb-1 rounded-2">
                                                            <span class="text-primary">@property.PropertyName:</span> @property.Value
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No properties</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-gradient btn-primary btn-sm fw-bold shadow">Edit</a>
                                                <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-gradient btn-info btn-sm fw-bold shadow">Details</a>
                                                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-gradient btn-danger btn-sm fw-bold shadow">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Create" class="btn btn-gradient btn-success btn-lg fw-bold shadow">Create New</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn-gradient {
            background: linear-gradient(90deg, #4f8cff 0%, #6ee7b7 100%);
            color: #fff !important;
            border: none;
        }

            .btn-gradient.btn-secondary {
                background: linear-gradient(90deg, #6ee7b7 0%, #3b82f6 100%);
                color: #fff !important;
            }

            .btn-gradient.btn-info {
                background: linear-gradient(90deg, #3b82f6 0%, #6ee7b7 100%);
                color: #fff !important;
            }

            .btn-gradient.btn-danger {
                background: linear-gradient(90deg, #ef4444 0%, #3b82f6 100%);
                color: #fff !important;
            }

            .btn-gradient.btn-success {
                background: linear-gradient(90deg, #22c55e 0%, #3b82f6 100%);
                color: #fff !important;
            }

            .btn-gradient:hover, .btn-gradient:focus {
                filter: brightness(0.95);
                color: #fff !important;
            }

        .card-header.bg-gradient {
            background: linear-gradient(90deg, #4f8cff 0%, #6ee7b7 100%) !important;
        }
    </style>
}